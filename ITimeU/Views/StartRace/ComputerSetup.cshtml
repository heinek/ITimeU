@model ITimeU.Models.StartRaceViewModel
@{
    ViewBag.Title = "ComputerSetup";
}
<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script> 
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Tools.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var img1pc = $("#img1pc");
        var img2pc = $("#img2pc");
        var hdRaceid =$("#hdRaceid");


        img1pc.click(function () {
            var url = "/TimeStartnumber/Index/?timerId=" + hdRaceid.val();
            document.location = url;
        });

        img2pc.click(function () {
            var url = "/StartRace/DualPcSetup/?raceId=" + hdRaceid.val();
            document.location = url;
        });
    });
</script>
<div class="contentmargin">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td>
                                <img src="../../Content/images/1pc.jpg" class="logo" id="img1pc" alt="Logo" />
                        </td>
                        <td>
                                <img src="../../Content/images/2pc.jpg" class="logo" id="img2pc" alt="Logo" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    @Html.Hidden("hdRaceid", Model.RaceId)
</div>

