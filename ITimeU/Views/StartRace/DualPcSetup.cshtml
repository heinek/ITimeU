@model ITimeU.Models.StartRaceViewModel
@{
    ViewBag.Title = "DualPcSetup";
}
<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Tools.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var imgTimer = $("#imgTimer");
        var imgRunner = $("#imgRunner");
        var hdRaceid = $("#hdRaceid");


        imgTimer.click(function () {
            var url = "/Timer/Index/" + hdRaceid.val();
            document.location = url;
        });

        imgRunner.click(function () {
            var url = "/CheckpointOrder/?raceId=" + hdRaceid.val();
            document.location = url;
        });

        $("img").hover(
            function () {
                this.src = this.src.replace("_off", "_on");
            },
            function () {
                this.src = this.src.replace("_on", "_off");
            }
        );
    });
</script>
<div class="topmenubar">
    <center>
        | @Html.ActionLink("HJEM", "Index", "Home", null, new { @class = "topmenulink" })
        | @Html.ActionLink("TILBAKE", "ComputerSetup", "StartRace", new { raceid = ViewBag.RaceId }, new { @class = "topmenulink" })
        |
    </center>
</div>
<div class="container">
    <div class="background">
        <div class="row">
            <div class="menubg2">
                <center>
                    <img src="../../Content/images/tidtaking_off.png" id="imgTimer" alt="Tidtaking" class="logo" /><img
                        id="imgRunner" src="../../Content/images/passeringer_off.png" alt="Passeringer" class="logo" />
                </center>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("hdRaceid", Model.RaceId)
