@model ITimeU.Models.StartRaceViewModel
@{
    ViewBag.Title = "DualPcSetup";
}
<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script> 
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Tools.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var imgTimer = $("#imgTimer");
        var imgRunner = $("#imgRunner");
        var hdRaceid = $("#hdRaceid");


        imgTimer.click(function () {
            var url = "/Timer/Index/" + hdRaceid.val();
            document.location = url;
        });

        imgRunner.click(function () {
            var url = "/CheckpointOrder/?raceId=" + hdRaceid.val();
            document.location = url;
        });
    });
</script>
<div class="topmenubar">
    <center>
        | @Html.ActionLink("HJEM", "Index", "Home", null, new { @class = "topmenulink" }) | @Html.ActionLink("TILBAKE", "ComputerSetup", "StartRace", new { raceid = ViewBag.RaceId }, new { @class = "topmenulink" }) | 
    </center>
</div>
<div class="contentmargin">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td>
                                <img src="../../Content/images/timer01.jpg" class="linkimage" id="imgTimer" alt="Logo" />
                        </td>
                        <td>
                                <img src="../../Content/images/runner01.jpg" class="linkimage" id="imgRunner" alt="Logo" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    @Html.Hidden("hdRaceid", Model.RaceId)
</div>
