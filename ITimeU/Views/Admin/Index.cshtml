@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Tools.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var imgAthlete = $("#imgAthlete");
        var imgRace = $("#imgRace");
        var imgClub = $("#imgClub");
        var imgResults = $("#imgResults");

        imgRace.click(function () {
            var url = "/Race/Setup/";
            document.location = url;
        });
        imgClub.click(function () {
            var url = "/Club/";
            document.location = url;
        });
        imgAthlete.click(function () {
            var url = "/Athlete/Setup/";
            document.location = url;
        });
        imgResults.click(function () {
            var url = "/Results/";
            document.location = url;
        });

        $("img").hover(
            function () {
                this.src = this.src.replace("_off", "_on");
            },
            function () {
                this.src = this.src.replace("_on", "_off");
            }
        );
    });
</script>
<div class="topmenubar">
    <center>
        | @Html.ActionLink("HJEM", "Index", "Home", null, new { @class = "topmenulink" })
        |
    </center>
</div>
<div class="container">
    <div class="background">
        <div class="row">
            <div class="menubg4">
                <img src="../../Content/images/lopoppsett_off.png" id="imgRace" alt="Løpsoppsett"
                    class="logo" /><img id="imgClub" src="../../Content/images/klubber_off.png" alt="Klubber"
                        class="logo" /><img id="imgAthlete" src="../../Content/images/lopere_off.png" alt="Løpere"
                            class="logo" /><img id="imgResults" src="../../Content/images/resultatadm_off.png"
                                alt="Resultater" class="logo" />
            </div>
        </div>
    </div>
</div>
