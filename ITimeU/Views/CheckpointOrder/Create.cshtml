@model ITimeU.Models.CheckpointOrderModel

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>

<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script> 
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Create</h2>

@using (Html.BeginForm()) { 
    @Html.ValidationSummary(true) 
    <fieldset> 
        <legend>CheckpointOrder</legend> 
 
        <div class="editor-label"> 
            @Html.LabelFor(model => model.CheckpointID, "Checkpoints") 
        </div> 
        <div class="editor-field"> 
            @Html.DropDownList("ddlCheckpoints", new SelectList(ViewBag.Checkpoints, "CheckpointID", "Name"))
        </div> 

        <div class="editor-label"> 
            @Html.LabelFor(model => model.StartingNumber, "Starting number") 
        </div> 
        <div class="editor-field">
            @Html.EditorFor(model => model.StartingNumber) 
        </div> 

        <div class="editor-label"> 
            @Html.LabelFor(model => model.OrderNumber, "Order number") 
        </div> 
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderNumber)
        </div> 
 
        <p> 
            <input type="submit" value="Create" /> 
        </p> 
    </fieldset>     
} 



