@model ITimeU.Models.CheckpointOrderModel

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>

<h2>Create</h2>

<table>
    <tr>
        <th></th>
        <th>
            CheckpointID<br />
            <select id="ddCheckpoint"></select>
        </th>
        <th>
            StartingNumber<br />
            <input type="text" id="txtStartingNumber" />

            <script type="text/javascript">
                $('#txtStartingNumber').keypress(function (event) {

                    var keycode = (event.keyCode ? event.keyCode : event.which);
                    if (keycode == '13') {
                        var checkpointID = ddCheckpoint.selectedIndex.valueOf;
                        var startingNumber = txtStartingNumber.value;
                        var orderNumber = lblOrderNumber.title;

                        $.get("/CheckpointOrder/Save", checkpointID, startingNumber, orderNumber);
                    }

                });
            </script>

        </th>
        <th>
            OrderNumber
            <label id="lblOrderNumber" title="1"></label>
        </th>
    </tr>
    </table>

